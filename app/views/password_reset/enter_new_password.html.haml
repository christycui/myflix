%section.reset_password.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for(@user) do |f|
        %header
          %h1 Reset Your Password
        %fieldset.form-group
          %label New Password
          .row
            .col-sm-4
              = f.password_field :password, label: 'new_password', class: 'form-control'
              %input{type: 'hidden', name: 'token', value: @user.token}
        %fieldset.form-group.action
          %input(type="submit" value="Reset Password" class="btn btn-default")
