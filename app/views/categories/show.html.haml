%section.genre
  %header.clearfix
    %h1= @category.name
    .genre_sorting
      Sort by: 
      =select(nil, nil, options_for_select([['A-Z','a-z'],['Z-A','z-a'],['Rating','rating']]))
  %article.row
    - @category.videos.each do |video|
      .video.col-md-2= link_to image_tag(video.small_cover_url), video_path(video)